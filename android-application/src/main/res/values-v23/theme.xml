<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AckTheme.Compat.DayNight">
        <item name="colorSurface">@color/light_stroke</item>
        <item name="colorOnSurface">@color/dark_stroke</item>
        <item name="colorOnSurfaceDim">@color/dark_stroke_70</item>

        <item name="android:colorBackground">@color/light_stroke</item>
        <item name="colorOnBackground">@color/dark_stroke</item>
    </style>
    <style name="AckTheme.Compat">
        <item name="android:statusBarColor">@color/light_stroke</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="AckActionBarTheme.Compat.DayNight">
        <item name="actionBarTheme">@style/actionbar_light</item>
        <item name="colorSurface">@color/light_stroke</item>
        <item name="colorOnSurface">@color/dark_stroke</item>
        <item name="colorOnSurfaceDim">@color/dark_stroke_70</item>

        <item name="android:colorBackground">@color/light_stroke</item>
        <item name="colorOnBackground">@color/dark_stroke</item>
    </style>
    <style name="actionbar_light" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/light_stroke</item>
        <item name="android:textColorPrimary">@color/dark_stroke</item>
    </style>
</resources>
