<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorOnSurfaceDim" format="reference|color" />
    <style name="AprsTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/brand</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/light_stroke</item>

        <item name="colorPrimaryDark">@color/dark_stroke</item>
        <item name="colorPrimary">@color/dark_stroke</item>
        <item name="colorOnPrimary">@color/light_stroke</item>

        <item name="colorSecondary">@color/brand</item>
        <item name="colorOnSecondary">@color/dark_stroke</item>

        <item name="bottomNavigationStyle">@style/AprsTheme.BottomNavigation</item>
        <item name="materialAlertDialogTheme">@style/AprsTheme.Alert</item>
    </style>
    <style name="AprsTheme.Compat">
    </style>
    <style name="AprsTheme.Compat.DayNight">
        <item name="colorSurface">@color/dark_stroke</item>
        <item name="colorOnSurface">@color/light_stroke</item>
        <item name="colorOnSurfaceDim">@color/light_stroke_70</item>

        <item name="android:colorBackground">@color/dark_stroke</item>
        <item name="colorOnBackground">@color/light_stroke</item>
    </style>
    <style name="AprsTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/navigation_foreground_color</item>
        <item name="itemTextColor">@color/navigation_foreground_color</item>
    </style>

    <style name="AprsTheme.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AprsTheme.Alert.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AprsTheme.Alert.Button</item>
    </style>
    <style name="AprsTheme.Alert.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
