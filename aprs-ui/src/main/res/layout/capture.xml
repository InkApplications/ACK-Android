<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/capture_stage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/capture_navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/capture_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/capture" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/capture_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/capture_navigation"
        android:layout_margin="@dimen/content_padding"
        app:backgroundTint="@color/brand"
        android:src="@drawable/ic_mic" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/capture_mic_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/capture_navigation"
        android:visibility="gone"
        android:layout_margin="@dimen/content_padding"
        app:backgroundTint="@color/brand"
        android:src="@drawable/ic_mic_off" />
</androidx.constraintlayout.widget.ConstraintLayout>
