<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/station_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        tools:background="#0ff"
        />
    <TextView
        android:id="@+id/station_name"
        android:textAppearance="?attr/textAppearanceHeadline1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/station_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/content_padding"
        android:layout_marginStart="@dimen/content_padding"
        android:layout_marginEnd="@dimen/content_padding"
        tools:text="KE0YOG"
        />

    <TextView
        android:id="@+id/station_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_weather"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableTint="?attr/colorOnSurface"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="75ยบF"
        app:layout_constraintTop_toBottomOf="@id/station_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/item_spacing"
        android:layout_marginStart="@dimen/content_padding"
        android:layout_marginEnd="@dimen/content_padding"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/station_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_wind"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableTint="?attr/colorOnSurface"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="217ยบ 13mph up to 27mph"
        app:layout_constraintTop_toBottomOf="@id/station_temperature"
        android:layout_marginTop="@dimen/item_spacing"
        android:layout_marginStart="@dimen/content_padding"
        android:layout_marginEnd="@dimen/content_padding"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/station_altitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_altitude"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableTint="?attr/colorOnSurface"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="123ft"
        app:layout_constraintTop_toBottomOf="@id/station_wind"
        android:layout_marginTop="@dimen/item_spacing"
        android:layout_marginStart="@dimen/content_padding"
        android:layout_marginEnd="@dimen/content_padding"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/station_comment"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/station_altitude"
        android:layout_marginTop="@dimen/item_spacing"
        android:layout_marginStart="@dimen/content_padding"
        android:layout_marginEnd="@dimen/content_padding"
        tools:text="Hello World"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
